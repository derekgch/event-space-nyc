<h1>Log In!</h1>
<br>


<%= form_tag sessions_path do %>
<table>
  <tr>
    <td><%= label_tag "Username" %></td>
    <td><%= text_field_tag :user_name %></td>
  </tr>
  <tr>
    <td><%= label_tag "Password"%></td>
    <td><%= password_field_tag :password %></td>
  </tr>
</table>
<br>

<%= submit_tag "Log In", class: "button" %>
<%end%>

<div class="errors">
  <% if flash[:errors] %>
    <ul>
    <%= flash[:errors] %>
  </ul>
  <br>
  <% end %>
</div>
